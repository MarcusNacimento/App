@page "/pessoas/formulario"

<h4>Formulário de Pessoas</h4>
    <div class= "row">
        <div class="col-md-3 col-sm-12">
            <div class="form-group mb-12">
                <label>Nome</label>
                <input type="text" name="nome" class=" form-control" />
            </div>
        </div>
    </div>
     <div class= "row">
        <div class="col-md-3 col-sm-12">
            <div class="form-group mb-12">
                <label>Idade</label>
                <input type="text" name="idade" class=" form-control" />
            </div>
        </div>
    </div>
     <div class= "row">
        <div class="col-md-3 col-sm-12">
            <div class="form-group mb-12">
                <label>Telefone</label>
                <input type="text" name="telefone" class=" form-control" />
            </div>
        </div>
    </div>
<div class="row">
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Endereco</label>
            <input type="text" name="endereco" class=" form-control" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-3 col-sm-12">
        <div class="form-group mb-12">
            <label>Email</label>
            <input type="text" name="email" class=" form-control" />
        </div>
    </div>
</div>
<div class="row">
    <button onclick="window.location.href='/pessoas'">Cancelar</button>
    <button onclick="salvar();">Salvar</button>
</div>

@section Scripts {
    <script src="~/js/pages/pessoas-formulario.js"></script>
}